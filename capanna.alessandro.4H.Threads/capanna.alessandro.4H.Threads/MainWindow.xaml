<Window x:Class="capanna.alessandro._4H.Threads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capanna.alessandro._4H.Threads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Width="100" x:Name="btn_Go" Click="btn_Go_Click"></Button>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock FontSize="50" x:Name="counter1">0</TextBlock>
            <TextBlock FontSize="50" x:Name="counter2">0</TextBlock>
        </StackPanel>
    </Grid>
</Window>
